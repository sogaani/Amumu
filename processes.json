{
  "apps": [
    {
      "name": "amumu-server",
      "script": "lib/app-encoder.js",
      "node_args" : "--max_old_space_size=256",
      "error_file": "/usr/local/var/log/amumu.stderr.log",
      "out_file": "/usr/local/var/log/amumu.stdout.log",
      "merge_logs": true,
      "pid_file": "/usr/local/var/run/amumu.pid",
      "exec_mode": "fork",
      "autorestart": true,
      "env": {
        "NODE_ENV": "production",
        "LOG_STDOUT": "/usr/local/var/log/amumu.stdout.log",
        "LOG_STDERR": "/usr/local/var/log/amumu.stderr.log"
      }
    }
  ]
}